<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Notas"
    android:background="#a8d4d4">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NOTA 1"
    android:id="@+id/textView"
    android:layout_marginTop="75dp"
    android:textColor="#000000"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:textSize="20dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NOTA 2"
    android:id="@+id/textView2"
    android:layout_marginTop="41dp"
    android:layout_below="@+id/textView"
    android:layout_alignStart="@+id/textView"
    android:textColor="#000000"
    android:textSize="20dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NOTA 3"
    android:id="@+id/textView3"
    android:layout_marginTop="40dp"
    android:layout_below="@+id/textView2"
    android:layout_alignStart="@+id/textView2"
    android:textColor="#000000"
    android:textSize="20dp" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="10"
    android:id="@+id/txtNota1"
    android:layout_marginStart="30dp"
    android:layout_above="@+id/textView2"
    android:layout_toEndOf="@+id/textView"
    android:textColor="#000000"
    android:background="#ffffff"
    android:textSize="30dp" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="10"
    android:id="@+id/txtNota2"
    android:textColor="#000000"
    android:layout_above="@+id/textView3"
    android:layout_alignStart="@+id/txtNota1"
    android:background="#ffffff"
    android:textSize="30dp" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="10"
    android:id="@+id/txtNota3"
    android:textColor="#000000"
    android:layout_alignBottom="@+id/textView3"
    android:layout_alignStart="@+id/txtNota2"
    android:background="#ffffff"
    android:textSize="30dp" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/txtPorc1"
    android:textColor="#000000"
    android:background="#ffffff"
    android:textSize="30dp"
    android:layout_alignTop="@+id/txtNota1"
    android:layout_toStartOf="@+id/btnCreditos" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/txtPorc3"
    android:textColor="#000000"
    android:background="#ffffff"
    android:textSize="30dp"
    android:layout_alignBaseline="@+id/txtNota3"
    android:layout_alignBottom="@+id/txtNota3"
    android:layout_alignStart="@+id/txtPorc1" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/txtPorc2"
    android:textColor="#000000"
    android:background="#ffffff"
    android:textSize="30dp"
    android:layout_alignTop="@+id/txtNota2"
    android:layout_alignStart="@+id/txtPorc1" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Examen"
    android:id="@+id/textView7"
    android:textColor="#000000"
    android:textSize="20dp"
    android:layout_below="@+id/textView3"
    android:layout_alignParentStart="true"
    android:layout_marginTop="41dp" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="10"
    android:id="@+id/txtNota4"
    android:textColor="#000000"
    android:background="#ffffff"
    android:textSize="30dp"
    android:layout_alignBottom="@+id/textView7"
    android:layout_alignStart="@+id/txtNota3" />

<EditText
    android:layout_width="@android:dimen/app_icon_size"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:ems="10"
    android:id="@+id/txtPorc4"
    android:textColor="#000000"
    android:background="#ffffff"
    android:textSize="30dp"
    android:layout_alignStart="@+id/txtPorc2"
    android:layout_alignTop="@+id/txtNota4" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Calcular"
    android:id="@+id/btnCalcular"
    android:background="#349d91"
    android:textColor="#efefef"
    android:textSize="15dp"
    android:textStyle="bold"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/txtNota1" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Limpiar"
    android:id="@+id/btnLimpiar"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:background="#a72424"
    android:textColor="#ffffff"
    android:textSize="10dp"
    android:layout_toStartOf="@+id/txtNota1"
    android:layout_alignBottom="@+id/btnCalcular"
    android:layout_alignEnd="@+id/textView" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="%  "
    android:textSize="30dp"
    android:textColor="#000000"
    android:layout_alignTop="@+id/txtPorc3"
    android:layout_alignStart="@+id/textView11"
    android:id="@+id/textView13" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="%  "
    android:textSize="30dp"
    android:textColor="#000000"
    android:layout_above="@+id/textView3"
    android:layout_alignStart="@+id/textView10"
    android:id="@+id/textView11" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="%  "
    android:textSize="30dp"
    android:textColor="#000000"
    android:id="@+id/textView10"
    android:layout_marginStart="50dp"
    android:layout_alignTop="@+id/txtNota1"
    android:layout_toEndOf="@+id/btnCalcular" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="%  "
    android:textSize="30dp"
    android:textColor="#000000"
    android:id="@+id/textView12"
    android:layout_alignTop="@+id/txtPorc4"
    android:layout_alignStart="@+id/textView13" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:id="@+id/txvResultado"
    android:textColor="#000000"
    android:textSize="40dp"
    android:textStyle="bold"
    android:focusableInTouchMode="false"
    android:elegantTextHeight="false"
    android:gravity="center"
    android:layout_below="@+id/txtNota4"
    android:layout_alignParentEnd="true" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Creditos"
    android:id="@+id/btnCreditos"
    android:textSize="12dp"
    android:textStyle="bold"
    android:background="#dfc500"
    android:layout_alignParentTop="true"
    android:layout_alignEnd="@+id/textView10" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SALIR"
    android:id="@+id/btnSalir"
    android:background="#ff0000"
    android:textColor="#ffffff"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_below="@+id/txvResultado"
    android:layout_alignEnd="@+id/txtPorc4"
    android:layout_alignStart="@+id/txtNota4" />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>
